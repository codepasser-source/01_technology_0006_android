<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"  
    >   
     <ImageView
         android:id="@+id/label_login"
         android:src="@drawable/label_regist"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"         
         android:paddingTop="0px"
         android:paddingBottom="0px"
         android:paddingLeft="0px"
         android:paddingRight="0px"
         android:layout_marginTop="60dip"
         android:layout_marginLeft="120dip" 
      />
      
     <TextView  
        android:id="@+id/reg_username_label"
        android:textSize="16dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginBottom="25dip"
        android:layout_marginRight="25dip"
        android:layout_marginTop="120dip" 
        android:layout_marginLeft="20dip" 
        android:textColor="#00386B"
        android:text="用户名:"
        />
        
     <EditText 
        android:id="@+id/reg_username"
        android:textSize="14dip"
        android:layout_width="200dip"
        android:layout_height="40dip" 
        android:layout_toRightOf="@id/reg_username_label"
        android:layout_alignTop="@id/reg_username_label"
       />
    
    <TextView  
        android:id="@+id/reg_password_label"
        android:textSize="16dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginBottom="25dip"
        android:layout_marginRight="40dip"
        android:layout_below="@id/reg_username_label"
        android:layout_alignLeft="@id/reg_username_label"
        android:textColor="#00386B"
        android:text="密码:"
        />
    
     <EditText 
        android:id="@+id/reg_password"
        android:textSize="14dip"
        android:layout_width="200dip"
        android:layout_height="40dip"
        android:layout_toRightOf="@id/reg_password_label"
        android:layout_alignTop="@id/reg_password_label"
        android:inputType="textPassword"
       />
      
      <TextView  
        android:id="@+id/reg_checkpassword_label"
        android:textSize="16dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginBottom="25dip"
        android:layout_marginRight="7dip"
        android:layout_below="@id/reg_password_label"
        android:layout_alignLeft="@id/reg_password_label"
        android:textColor="#00386B"
        android:text="确认密码:"
        />
        
       <EditText 
        android:id="@+id/reg_checkpassword"
        android:textSize="14dip"
        android:layout_width="200dip"
        android:layout_height="40dip"
        android:layout_toRightOf="@id/reg_checkpassword_label"
        android:layout_alignTop="@id/reg_checkpassword_label"
        android:inputType="textPassword"
       />
       
       <TextView  
        android:id="@+id/reg_email_label"
        android:textSize="16dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginBottom="40dip"
        android:layout_marginRight="40dip"
        android:layout_below="@id/reg_checkpassword_label"
        android:layout_alignLeft="@id/reg_checkpassword_label"
        android:textColor="#00386B"
        android:text="邮箱:"
        />
        
       <EditText 
        android:id="@+id/reg_email"
        android:textSize="14dip"
        android:layout_width="200dip"
        android:layout_height="40dip"
        android:layout_toRightOf="@id/reg_email_label"
        android:layout_alignTop="@id/reg_email_label" 
        android:layout_marginBottom="30dip"
       />
       
       <Button
         android:id="@+id/reg_commitBT"
         android:layout_width="90dip"
         android:layout_height="40dip"
         android:textSize="16dip"
         android:text="注册"
         android:layout_marginRight="20dip"
         android:layout_below="@id/reg_email"
         android:layout_alignLeft="@id/reg_email"
         android:textColor="#00386B"
       />
      <Button
         android:id="@+id/reg_resetBT"
         android:layout_width="90dip"
         android:layout_height="40dip"
         android:textSize="16dip"
         android:text="重置"
         android:layout_toRightOf="@id/reg_commitBT"
         android:layout_alignTop ="@id/reg_commitBT"
         android:textColor="#00386B"
       />
       
       <ImageButton
         android:id="@+id/main_mb0_bt"
         android:background="@drawable/menubar_0"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:layout_alignParentBottom="true"
         android:layout_alignParentLeft="true"
         android:paddingTop="0px"
         android:paddingBottom="0px"
         android:paddingLeft="0px"
         android:paddingRight="0px"
      />
      
       <ImageButton
         android:id="@+id/main_mb1_bt"
         android:background="@drawable/menubar_1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/main_mb0_bt"
         android:layout_alignParentBottom="true"
         android:paddingTop="0px"
         android:paddingBottom="0px"
         android:paddingLeft="0px"
         android:paddingRight="0px" 
      />
      
        <ImageButton
         android:id="@+id/main_mb2_bt"
         android:background="@drawable/menubar_2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/main_mb1_bt"
         android:layout_alignParentBottom="true"
         android:paddingTop="0px"
         android:paddingBottom="0px"
         android:paddingLeft="0px"
         android:paddingRight="0px" 
         
      />
      <ImageButton
         android:id="@+id/main_mb3_bt"
         android:background="@drawable/menubar_3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/main_mb2_bt"
         android:layout_alignParentBottom="true"
         android:paddingTop="0px"
         android:paddingBottom="0px"
         android:paddingLeft="0px"
         android:paddingRight="0px" 
      />
      
      <ImageButton
         android:id="@+id/main_mb4_bt"
         android:background="@drawable/menubar_4"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/main_mb3_bt"
         android:layout_alignParentBottom="true"
         android:paddingTop="0px"
         android:paddingBottom="0px"
         android:paddingLeft="0px"
         android:paddingRight="0px" 
      />
       
</RelativeLayout>
