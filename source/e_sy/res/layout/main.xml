<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"  
    >  
     <ImageView
         android:id="@+id/label_login"
         android:src="@drawable/label_login"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"         
         android:paddingTop="0px"
         android:paddingBottom="0px"
         android:paddingLeft="0px"
         android:paddingRight="0px"
         android:layout_marginTop="60dip"
         android:layout_marginLeft="120dip" 
      />
      
     <TextView  
        android:id="@+id/username_label"
        android:textSize="16dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginBottom="25dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="120dip" 
        android:layout_marginLeft="25dip" 
        android:textColor="#00386B"
        android:text="用户名:"
      />
        
     <EditText 
        android:id="@+id/username_text"
        android:textSize="14dip"
        android:layout_width="200dip"
        android:layout_height="40dip" 
        android:layout_toRightOf="@id/username_label"
        android:layout_alignTop="@id/username_label" 
       />
    
    <TextView  
        android:id="@+id/password_label"
        android:textSize="16dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginBottom="20dip"
        android:layout_marginRight="25dip"
        android:layout_below="@id/username_label"
        android:layout_alignLeft="@id/username_label"
        android:textColor="#00386B"
        android:text="密码:"
        />
    
     <EditText 
        android:id="@+id/password_text"
        android:textSize="14dip"
        android:layout_width="200dip"
        android:layout_height="40dip"
        android:layout_toRightOf="@id/password_label"
        android:layout_alignTop="@id/password_label"
        android:inputType="textPassword"
       />
     <CheckBox  
        android:id="@+id/remember_check" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dip"
        android:layout_marginBottom="20dip"
        android:layout_below="@id/password_label"
        android:layout_alignLeft="@id/password_label"
        android:text="自动登录"
        android:textColor="#00386B"
        android:textSize="18px"
        
         />
     <ImageButton
        android:id="@+id/login_bt" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:layout_below="@id/remember_check"
        android:layout_marginBottom="10dip"
        android:layout_centerInParent="true"  
        android:textSize="16dip" 
        android:background="@drawable/btn_login"
      />
      
      <ImageButton
        android:id="@+id/regist_bt" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:layout_below="@id/login_bt"
        android:layout_centerInParent="true"  
        android:textSize="16dip" 
        android:background="@drawable/btn_regist"
      />
      
      <ImageButton
         android:id="@+id/main_mb0_bt"
         android:background="@drawable/menubar_0_0"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:layout_alignParentBottom="true"
         android:layout_alignParentLeft="true"
         android:paddingTop="0px"
         android:paddingBottom="0px"
         android:paddingLeft="0px"
         android:paddingRight="0px"
      />
      
       <ImageButton
         android:id="@+id/main_mb1_bt"
         android:background="@drawable/menubar_1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/main_mb0_bt"
         android:layout_alignParentBottom="true"
         android:paddingTop="0px"
         android:paddingBottom="0px"
         android:paddingLeft="0px"
         android:paddingRight="0px" 
      />
      
        <ImageButton
         android:id="@+id/main_mb2_bt"
         android:background="@drawable/menubar_2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/main_mb1_bt"
         android:layout_alignParentBottom="true"
         android:paddingTop="0px"
         android:paddingBottom="0px"
         android:paddingLeft="0px"
         android:paddingRight="0px" 
         
      />
      <ImageButton
         android:id="@+id/main_mb3_bt"
         android:background="@drawable/menubar_3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/main_mb2_bt"
         android:layout_alignParentBottom="true"
         android:paddingTop="0px"
         android:paddingBottom="0px"
         android:paddingLeft="0px"
         android:paddingRight="0px" 
      />
      
      <ImageButton
         android:id="@+id/main_mb4_bt"
         android:background="@drawable/menubar_4"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/main_mb3_bt"
         android:layout_alignParentBottom="true"
         android:paddingTop="0px"
         android:paddingBottom="0px"
         android:paddingLeft="0px"
         android:paddingRight="0px" 
      />
      
</RelativeLayout>
